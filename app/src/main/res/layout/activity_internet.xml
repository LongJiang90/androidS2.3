<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longj.androids23.InternetActivity"
    android:orientation="vertical" >

    <Button
        android:id="@+id/get_requres_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送Get请求"/>
    <Button
        android:id="@+id/post_requres_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送Post请求"/>

    <TextView
        android:id="@+id/json_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="获取到的JSON数据"/>

    <Button
        android:id="@+id/download_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载图片"/>
    <ImageView
        android:id="@+id/show_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />








</LinearLayout>
