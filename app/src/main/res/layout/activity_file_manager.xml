<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longj.androids23.FileManagerActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/folder_name_editTextV"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="请输入需要创建的文件夹名称"/>
        <Button
            android:id="@+id/add_folder_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="创建"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/file_name_editTextV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入需要创建的文件名称"/>
        <EditText
            android:id="@+id/file_detial_editTextV"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="请输入需要创建的文件名称"
            android:lines="3"/>
        <Button
            android:id="@+id/add_file_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="创建"/>
    </LinearLayout>

    <Button
        android:id="@+id/read_file_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="读取新创建的文件"/>
    <TextView
        android:id="@+id/read_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






</LinearLayout>
