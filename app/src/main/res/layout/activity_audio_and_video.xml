<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longj.androids23.AudioAndVideoActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="音乐播放器"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">
        
        <Button
            android:id="@+id/audio_last_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/audio_last"/>
        <Button
            android:id="@+id/audio_paly_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/audio_play"/>
        <Button
            android:id="@+id/audio_next_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/audio_next"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="录制视频，点击播放"
        android:gravity="center"/>
    <Button
        android:id="@+id/video_record_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="点击开始录制视频"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/top_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:numColumns="4" />

    </LinearLayout>


</LinearLayout>
