<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longj.androids23.TransactionActivity"
    android:orientation="vertical"
    android:id="@+id/transitions_container"
    >
    <!--vertical-->
    <Button
        android:id="@+id/begin_animation_btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="开始动画"
        android:textColor="@color/red"
        android:background="@color/lightGray"
        />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请靠边停车接受检查"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        />
    
    <View
        android:id="@+id/left_out_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:background="@color/lightBlue"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/huadong_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="滑动页面跳转"
        />

    <Button
        android:id="@+id/drdc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="淡入淡出页面跳转"
        />

    <Button
        android:id="@+id/gxys_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:transitionName="mybtn"
        android:text="共享元素动画页面跳转"
        />





    

</LinearLayout>
