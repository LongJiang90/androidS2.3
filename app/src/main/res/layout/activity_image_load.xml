<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.longj.androids23.ImageLoadActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fresco_image_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:viewAspectRatio="1.33"
                app:placeholderImage="@drawable/image1"
                app:placeholderImageScaleType="centerInside"

                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fresco_image_view1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:viewAspectRatio="1.33"
                app:placeholderImage="@drawable/image2"
                app:placeholderImageScaleType="centerInside"

                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fresco_image_view2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:viewAspectRatio="1.33"
                app:placeholderImage="@drawable/image3"
                app:placeholderImageScaleType="centerInside"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载时修改图片尺寸"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fresco_image_view3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:viewAspectRatio="1.33"
                app:placeholderImage="@drawable/image3"
                app:placeholderImageScaleType="centerInside"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图片加水印或者网格"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fresco_image_view4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:viewAspectRatio="1.33"
                app:placeholderImage="@drawable/image1"
                app:placeholderImageScaleType="centerInside"

                />


        </LinearLayout>



    </ScrollView>







</LinearLayout>
