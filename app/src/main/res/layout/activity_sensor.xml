<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longj.androids23.SensorActivity">

    <ScrollView
        android:id="@+id/sensor_scrollview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度、方向、陀螺仪、磁场、重力、线性加速度、温度、光感、压力、心率、指南针、水平仪"/>
            <TextView
                android:id="@+id/jsd_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="加速度：" />
            <TextView
                android:id="@+id/fx_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="方向：" />
            <TextView
                android:id="@+id/tly_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="陀螺仪：" />
            <TextView
                android:id="@+id/cc_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="磁场：" />
            <TextView
                android:id="@+id/zl_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="重力：" />
            <TextView
                android:id="@+id/xxjsd_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="线性加速度：" />
            <TextView
                android:id="@+id/wd_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="温度：" />
            <TextView
                android:id="@+id/gg_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="光感：" />
            <TextView
                android:id="@+id/yl_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="压力：" />
            <TextView
                android:id="@+id/xl_text_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="心率：" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="指南针" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/zlz_image_view"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/zhinanzhen"/>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="水平仪" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">
                <com.longj.androids23.MyViews.SpyView
                    android:id="@+id/spy_view"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    />
            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
