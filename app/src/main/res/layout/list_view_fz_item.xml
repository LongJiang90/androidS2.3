<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_item_imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/zhinanzhen"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/home_item_titleTextV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="标题"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/home_item_detialTextV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是一个很长的详情，他包含着很多很多的事情，当然我控制它超过2排的话后面的就省略。这是一个很长的详情，他包含着很多很多的事情，当然我控制它超过2排的话后面的就省略。这是一个很长的详情，他包含着很多很多的事情，当然我控制它超过2排的话后面的就省略。"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="2"/>
            <TextView
                android:id="@+id/home_item_fbTimeTextV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布时间"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>